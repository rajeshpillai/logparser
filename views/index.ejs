<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" integrity="sha512-8bHTC73gkZ7rZ7vpqUQThUDhqcNFyYi2xgDgPDHc+GXVGHXq+xPjynxIopALmOPqzo9JZj0k6OqqewdGO3EsrQ==" crossorigin="anonymous" referrerpolicy="no-referrer" /> -->
  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
  <link href="https://cdn.datatables.net/fixedcolumns/3.3.3/css/fixedColumns.bootstrap5.min.css" rel="stylesheet" />
  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/dt-1.10.25/datatables.min.css"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
  <title>IDfy Access Log Parser</title>
  <style>
    body {
    }
    .active {
      border-bottom: 1px dashed gray;
      color: #AD301A;
    }

    .header-container {
      display: flex;
      background: #AD301A;
      justify-content: space-between;
      width: 100%;
    }

    .header {
      color: white;
      padding: 3px;
      /* border-radius: 3px; */
    }

    .upload-link, {
      margin: 10px;
      color: #0BF4DE;
    }

    .dashboard {
      margin: 10px;
    }

    .header-sidebar {
      color: black;
    }


    .file-item {
      padding: 5px;
    }

    .home-link {
      /* background: white; */
      text-decoration: none;
      padding: 3px;
      color: white;
      border-radius: 3px;
    }

    table{
      margin: 0 auto;
      width: 100%;
      clear: both;
      border-collapse: collapse;
      table-layout: fixed; 
      word-wrap:break-word; 
    }

    .files-container  {
      height: 100%;
      min-height: 100vh;
      overflow-y: auto;
      box-shadow: 10px 10px 5px -9px rgba(220,19,19,0.75);
    }

    .stats-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      background-color: rgb(238, 227, 227);
      border-radius: 6px;
    }

    .stats-item {
      text-transform: uppercase;
      background-color: rgb(253, 253, 253);
      color: rgb(66, 37, 37);
      border: 1px solid lightgray;
      margin: 3px;
      padding: 5px;
      text-align: center;
      border-radius: 3px;
      /* box-shadow: 10px 10px 5px -9px rgba(220,19,19,0.75); */
      box-shadow: 10px 10px 5px -10px rgba(220,19,19,0.75);
    }

    ol.files {
      list-style-type: none;
    }

    li.file-item {
      counter-increment: item;
      margin-bottom: 5px;
    }

    li.file-item:before {
      margin-right: 10px;
      content: counter(item);
      background: rgba(220,19,19,0.75);
      border-radius: 50%;
      color: white;
      width: 1.6em;
      height: 1.6em;
      text-align: center;
      display: inline-block;
    }

    li.file-item {
      border-left: 3px dashed rgba(220,19,19,0.75);;
      border-top-left-radius: 9px;
      border-bottom-left-radius: 9px;
      padding-right: 0;
    }

    #stats_controller {
      padding: 4px;
    }

    .kpi {
      border-radius: 6px;
      background-color: rgba(220,19,19,0.75); /* #e03415; */
      color: white;
      display: inline-block;
      padding: 0 10px;
    }

    .col-search{
      max-width: 140px;
    }

    #chart {
    }

  </style>
</head>
<body>
  <header class="header-container">
    <h3 class="header p-2 ">
      <a class="home-link" href="/">IDfy Log Parser</a>
    </h3>
    <a class="upload-link" href="#">Upload log files </a>
  </header>
  <div id="root" class="container-fluid">
      <div class="row">
        <div class="files-container col-3">
          <h4 class="ui header-sidebar">LOG FILES</h4>
          
          <ol class="files ui ordered list">
            <% for (const file of files) { %>
              <li class="file-item">
                <a class="file-name" href="/logs/<%= file %>">
                  <%= file %>
                </a>
              </li>
            <% } %>
          </ol>
          <% if (files.length === 0) { %>
            <div class="alert text-danger">
              No log files found. Copy your log files to the "data" folder and try again!
            </div>
          <% } %>
        </div>
        
        <div class="col-9">
          <h4 id="log-title">LOGS</h4>
          <a class="logs-link" href="#">Logs</a>
          <a class="dashboard-link" href="#">Dashboard</a>


          <div id="stats_controller"></div>
          <div id="chart"></div>
          <div id="logs-container" class="table-responsive" style="overflow-x:auto">
            <table id="logs" class="table table-bordered table-sm" style="width:100%" >
              <thead>
                <tr>
                  <th>Date(IST)</th>
                  <th>Time</th>
                  <th>IP Address</th>
                  <th>HTTP Method</th>
                  <th>Url</th>
                  <th>Controller</th>
                </tr>
              </thead>
              <tbody>
                <% logs.forEach(log => { %>
                    <tr>
                      <td>
                        <%= log.date %>
                      </td>
                      <td>
                        <%= log.time%>
                      </td>
                      <td>
                        <%= log.ip%>
                      </td>
                      <td>
                        <%= log.method %>
                      </td>
                      <td>
                        <%= log.path %>
                      </td>
                      <td>
                        <%= log.controller %>
                      </td>
                    </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
  </div>  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js"></script>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <!-- JavaScript Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
  <script src="/scripts/lodash/lodash.js"></script>
  <script src="/scripts/moment/moment.js"></script>

 
  <script type="text/javascript" src="https://cdn.datatables.net/v/bs5/dt-1.10.25/datatables.min.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>

  <script type="text/javascript" src="/app/utils.js"></script>
  <script src="/dist/bundle.js"></script>
  <!-- <script type="text/javascript" src="/app/index.js"></script> -->

</body>
</html>

